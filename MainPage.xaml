<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="CameraMaui151sample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label x:Name="barcodeResult" FontSize="20" Text="No barcode detected yet"/>
            <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200" BackgroundColor="Grey" />
            <Button x:Name="controlButton" Text="Start" Clicked="controlButton_Clicked" IsEnabled="False" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
